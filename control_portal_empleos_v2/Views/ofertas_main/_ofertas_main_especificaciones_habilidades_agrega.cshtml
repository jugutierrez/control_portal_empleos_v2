

@using (Html.BeginForm("Create_especificacion_habilidad", "ofertas_main", FormMethod.Post, new { @id = "my-form" }))
{
    @Html.AntiForgeryToken()
    
   
        @Html.ValidationSummary(true)
        @Html.Hidden("id_especificacion_oferta", (Int32)ViewBag.id)
       

    <div class="row">
          <div class="col-md-8 col-md-offset-2">
            <div class="text-center well">
              <h2>Agregar Competencia</h2>
              <ul class="list-group">
                <li class="list-group-item"> <h2>Seleccione nueva Competencia requerida para la oferta</h2></li>

                <li class="list-group-item">
                    <h3> Seleccionar Competencia:</h3>
                  @Html.DropDownList("id_habilidad", (IEnumerable<SelectListItem>)ViewBag.id_habilidad, "Seleccione...", new { @class = "form-control" })</li>
                <li class="list-group-item">
                    <h3>Selecciona el nivel necesario de Competencia:</h3> 
                  @Html.DropDownList("id_grado_habilidad", (IEnumerable<SelectListItem>)ViewBag.id_grado_habilidad, "Seleccione...", new { @class = "form-control" })</li>
                  <li class="list-group-item">
                      <h3>Selecciona nivel de importancia para la oferta: </h3> 
                  @Html.DropDownList("id_nivel_importancia", (IEnumerable<SelectListItem>)ViewBag.id_nivel_importancia, "Seleccione...", new { @class = "form-control" })</li>
                   <li class="list-group-item">
                       <input type="submit" value="Agregar" class="btn btn-lg btn-block btn-info" />
                </li>
              </ul>
            </div>
          </div>
        </div>
}



<script type="text/javascript">

    $("#my-form").on("submit", function (e) {
        e.preventDefault();

        $.ajax({
            url: this.action,
            type: this.method,
            data: $(this).serialize(),
            success: function (response) {
                if (response != null && response.success) {
                    alert(response.responseText);
                    $(".reemplazar").each(function (index3, item) {
                        var url = $(item).data("url");
                        if (url && url.length > 0) { $(item).load(url); }

                    })
                    $('#modal1').modal('hide')

                } else {
                    // DoSomethingElse()
                    alert(response.responseText);
                  
                }
            },
            error: function (response) {
                alert("error!");  //
            }




        });

    });


</script>