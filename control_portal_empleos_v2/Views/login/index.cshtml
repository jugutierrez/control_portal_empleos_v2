



<div class="cover">
    <div class="background-image-fixed cover-image" style="background-image : url('https://unsplash.imgix.net/photo-1422022098106-b3a9edc463af?w=1024&amp;q=50&amp;fm=jpg&amp;s=bbe0beb19ba846e0de37abd1f63acf13')"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 text-center" style="background-color:white;">
                <hr>
                <div class="col-md-12 ">
                    <i class="fa fa-5x fa-fw text-info fa-users"></i>
                    <h2 class="text-info">Login de Usuarios</h2>
                    <hr>
                </div>

                <form name="mainForm" data-ng-submit="login()" data-ng-controller="login" ng-model="logins">

                    <div flex layout-padding ng-show="respuesta.aviso">{{respuesta.aviso}}</div>
                    <div class="form-group">
                        <label class="control-label" for="dedef">Usuario:</label>


                        <input type="text" class="form-control" id="nombre_cuenta_usuario" placeholder="Correo electronico" ng-model="logins.nombre_cuenta_usuario" />

                    </div>
                    <div class="form-group">
                        <label class="control-label" for="asd1">Contraseña:</label>

                      
                        <input type="password" class="form-control" id="clave_usuario" placeholder="Contraseña" ng-model="logins.clave_usuario" />
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-block btn-lg btn-info">Ingresar</button>
                        <hr>
                        <p>

                            
                                <h3><a class="text-info" ng-click="abremodal('../login/recordar_credenciales','')">¿Olvido Sus Credenciales?</a></h3>
                           
                        </p>
                        <hr>
                        <p>
                           
                            <h2><a class="text-info" ng-click="abremodal('../login/registro','')">Registrarse</a></h2>
                        </p>
                    </div>
                    <hr>
                    </form>
                    
</div>
        </div>
    </div>
</div>




