@model control_portal_empleos_v2.Models.usuarios
@using (Html.BeginForm("actualiza_datos_contacto_usuario", "control_cuenta", FormMethod.Post, new { @id = "formulario_contactos" }))
{
    @Html.AntiForgeryToken()


    @Html.ValidationSummary(true)
    @Html.Hidden("id_usuario",Convert.ToInt32(Model.id_usuario))
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="well">
            <h2 class="text-center">Actualiza tus datos de Contacto</h2>
            <p></p>
            <ul class="list-group">
                <li class="list-group-item">
                    <div class="form-group">
                        <label class="control-label" for="exampleInputEmail1">Correo Electronico</label>
                        <input class="form-control" id="correo_electronico_usuario" name="correo_electronico_usuario" placeholder="Ingresa tu nuevo Correo Electronico" type="email" value="@Html.DisplayFor(model => model.correo_electronico_usuario)">
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="form-group">
                        <label class="control-label" for="exampleInputEmail1">Anexo de Contacto</label>
                        <input class="form-control" id="anexo_usuario" name="anexo_usuario" placeholder="Ingresa tu nuevo anexo" type="text" value="@Html.DisplayFor(model => model.anexo_usuario)">
                    </div>
                </li>
            </ul>
            <input type="submit" value="Actualizar" class="btn btn-block btn-lg btn-primary" />
        </div>
    </div>
</div>
}
<script type="text/javascript">

    $("#formulario_contactos").on("submit", function (e) {
        e.preventDefault();

        $.ajax({
            url: this.action,
            type: this.method,
            data: $(this).serialize(),
            success: function (response) {
                if (response != null && response.success) {
                    alert(response.responseText);
                
                    window.location.reload();

                } else {
                    // DoSomethingElse()
                    alert(response.responseText);
                }
            },
            error: function (response) {
                alert("error!");  //
            }




        });

    });


</script>
