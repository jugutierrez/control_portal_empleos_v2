
@{
    ViewBag.Title = "Informes";
}

<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="text-center">Panel de Control e Informes</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel with-nav-tabs panel-default">
                    <div class="panel-heading">
                        <ul class="nav nav-tabs">
                            <li class="active">
                                <a href="#tab1default" data-toggle="tab">Informes Basicos</a>
                            </li>

@if ((bool)ViewBag.informes_avanzados == true)
{
                            <li>
                                <a href="#tab2default" data-toggle="tab">Informes Avanzados</a>
                            </li>
}
@if ((bool)ViewBag.informes_especiales == true)
{
                            <li>
                                <a href="#tab3default" data-toggle="tab">Informes Especiales</a>
                            </li>
}









                        </ul>
                    </div>
                    <div class="panel-body">
                        <div class="tab-content">
                            <div class="tab-pane fade in active" id="tab1default">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="well">
                                            <h1 class="text-center">Informes Basicos por definir</h1>
                                            <div class="well">
                                               
                                                <a data-toggle="modal" data-target="#mdsoporte" id="btn1" class="btn1" data-url="@Url.Action("informes_filtros","control_informes", new {  id = 1 })">Informe Por Oferta</a>
                                            </div>

                                        </div>
                                    </div>
                                 
                                </div>
                            </div>
                            <div class="tab-pane fade" id="tab2default">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="well"><h1 class="text-center">Informes avanzados por definir</h1></div>
                                    </div>
                                </div>
                            

                            </div>
                            <div class="tab-pane fade" id="tab3default">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="well"><h1 class="text-center">Informes Especiales por definir</h1> </div>
                                    </div>
                                </div>
                          
                            </div>
                   
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    $(".btn1").on("click", function () {
        var url = $(this).data('url');
        $(".modaldiv").html("Cargando...");
        $.get(url, function (data) {


            $(".modaldiv").html(data);


        });
    });
</script>